package ex01;

import java.util.Scanner;

public class Sample {

	public static void main(String[] args) {
		// 이름, 국어, 영어, 수학 키보드에서 입력
		// 총점, 평균 출력
		
		Scanner s=new Scanner(System.in);
		System.out.print("이름: ");
		String name=s.next();
		
		System.out.print("국어: ");
		int kor=s.nextInt();
		
		System.out.print("영어: ");
		int eng=s.nextInt();
		
		System.out.print("수학: ");
		int mat=s.nextInt();
		
		System.out.print("총점: ");
		int tot= kor + eng + mat;
		
		System.out.print("평균: ");
		int avg= tot/3;
		
		
		
		
		
		
		
	}//main method

}// Sample
