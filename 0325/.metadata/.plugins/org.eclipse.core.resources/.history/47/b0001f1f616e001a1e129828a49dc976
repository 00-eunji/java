package ex05;

public class Sample {

	public static void main(String[] args) {
		// 성적표 제작하기
		String [] name= {"오은지", "김은지", "최은지"};
		int [] kor= {90,95,70};
		int [] eng= {90,95,70};
		int [] mat= {90,95,70};
		int [] tot= new int[3];
		double[] avg= new double[3];
		
		System.out.println("이름\t국어\t영어\t수학\t총점\t평균");
		for(int i=0; i<=2; i++) {
			tot[i]= kor[i] + eng[i] + mat[i];
			avg[i]= tot[i]/avg.length-1;
			System.out.println(name[i] + "\t" + kor[i] + "\t" + eng[i] + "\t" + mat[i] + "\t" + tot + "\t" + avg);
		}
		

	} //main method

} //Sample
